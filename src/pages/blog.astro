---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const sortedPosts = posts.sort((a, b) => {
  const dateA = new Date(a.data.date);
  const dateB = new Date(b.data.date);
  return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Blog - Metaduck">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Blog Posts</h1>

    <div class="grid gap-8">
      {
        sortedPosts.map((post) => (
          <article class="bg-white dark:bg-white rounded-lg shadow-md overflow-hidden">
            <div class="flex flex-col md:flex-row">
              {post.data.image && (
                <div class="md:w-1/3">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-48 md:h-full object-cover"
                  />
                </div>
              )}
              <div class={`p-6 ${post.data.image ? "md:w-2/3" : "w-full"}`}>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-900 mb-2">
                  <a
                    href={`/${post.slug}`}
                    class="hover:text-blue-600 dark:hover:text-blue-600"
                  >
                    {post.data.title}
                  </a>
                </h2>
                <div class="flex items-center text-gray-600 dark:text-gray-600 mb-4">
                  <span>{post.data.author}</span>
                  <span class="mx-2">â€¢</span>
                  <time datetime={post.data.date.toISOString()}>
                    {new Date(post.data.date).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </time>
                </div>
                <p class="text-gray-600 mb-4">{post.data.description}</p>
                {post.data.tags && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</Layout>
