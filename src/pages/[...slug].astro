---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Mermaid from "../components/Mermaid.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post, allPosts: posts },
  }));
}

const { post, allPosts } = Astro.props;
const { title, description, date, author, tags } = post.data;
const { Content } = await post.render();

// Calculate related articles
const currentTags = tags || [];
const relatedArticles = allPosts
  .filter((p) => p.slug !== post.slug && p.data.tags && p.data.tags.length > 0)
  .map((p) => {
    const sharedTags = p.data.tags.filter((tag) => currentTags.includes(tag));
    return {
      post: p,
      sharedTagCount: sharedTags.length,
    };
  })
  .filter((item) => item.sharedTagCount > 0)
  .sort((a, b) => {
    // Sort by number of shared tags (descending), then by date (descending)
    if (b.sharedTagCount !== a.sharedTagCount) {
      return b.sharedTagCount - a.sharedTagCount;
    }
    const dateA = new Date(a.post.data.date);
    const dateB = new Date(b.post.data.date);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 4)
  .map((item) => item.post);
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-12">
      <h1
        class="text-5xl font-bold text-green-400 mb-4 font-['Orbitron'] tracking-wider"
        style="text-shadow: 0 0 15px rgba(0, 255, 65, 0.6);"
      >
        {title}
      </h1>
      <div class="flex items-center text-green-300/80 mb-6 font-mono text-sm">
        <span class="font-medium">{author}</span>
        <span class="mx-2 text-orange-400">•</span>
        <time datetime={date.toISOString()}>
          {
            new Date(date).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
      </div>
      {
        tags && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/tags/${tag.toLowerCase().replace(/\s+/g, "-").replace(/[&]/g, "and")}`}
                class="bg-slate-700 text-orange-300 px-3 py-1 rounded-full text-sm font-mono border border-orange-400/30 hover:bg-slate-600 transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        )
      }
    </header>

    <div class="prose prose-lg max-w-none">
      <Content />
      <Mermaid />
    </div>
  </article>

  {
    relatedArticles.length > 0 && (
      <section class="max-w-4xl mx-auto mt-16">
        <h2
          class="text-3xl font-bold text-green-400 mb-8 font-['Orbitron'] tracking-wider"
        >
          RELATED ARTICLES
        </h2>
        <div class="grid gap-8">
          {relatedArticles.map((relatedPost) => (
            <article class="sci-fi-card">
              <div class="flex flex-col md:flex-row">
                {relatedPost.data.image && (
                  <div class="md:w-1/3 overflow-hidden">
                    <img
                      src={relatedPost.data.image}
                      alt={relatedPost.data.title}
                      class="w-full h-48 md:h-full object-cover rounded-lg"
                    />
                  </div>
                )}
                <div
                  class={`${relatedPost.data.image ? "md:w-2/3" : "w-full"} p-6`}
                >
                  <h3 class="text-2xl font-bold text-green-400 mb-3 font-['Orbitron'] tracking-wide">
                    <a
                      href={`/${relatedPost.slug}`}
                      class="hover:text-green-300 transition-colors"
                    >
                      {relatedPost.data.title}
                    </a>
                  </h3>
                  <div class="flex items-center text-green-300/70 mb-4 font-mono text-sm">
                    <span>{relatedPost.data.author}</span>
                    <span class="mx-2 text-orange-400">•</span>
                    <time datetime={relatedPost.data.date.toISOString()}>
                      {new Date(relatedPost.data.date).toLocaleDateString(
                        "en-US",
                        {
                          year: "numeric",
                          month: "long",
                          day: "numeric",
                        }
                      )}
                    </time>
                  </div>
                  <p class="text-green-300 mb-6 leading-relaxed">
                    {relatedPost.data.description}
                  </p>
                  {relatedPost.data.tags && (
                    <div class="flex flex-wrap gap-2">
                      {relatedPost.data.tags.map((tag) => (
                        <a
                          href={`/tags/${tag.toLowerCase().replace(/\s+/g, "-").replace(/[&]/g, "and")}`}
                          class="bg-slate-700 text-orange-300 px-3 py-1 rounded-full text-sm font-mono border border-orange-400/30 hover:bg-slate-600 transition-colors"
                        >
                          {tag}
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    )
  }

  <footer class="border-t border-green-500/30 mt-12">
    <div class="container mx-auto px-4 py-6 text-center text-green-400/70">
      <p class="mb-4 font-mono">
        Hi, I'm Pedro Teixeira, a software engineer passionate about AI, web
        development, and building tools that make developers' lives easier.
      </p>
      <div class="flex justify-center space-x-4">
        <a
          href="https://linkedin.com/in/pedroteixeira"
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-400/70 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
        >
          LINKEDIN
        </a>
        <a
          href="https://twitter.com/pgte"
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-400/70 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
        >
          TWITTER
        </a>
        <a
          href="https://github.com/pgte"
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-400/70 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
        >
          GITHUB
        </a>
      </div>
    </div>
  </footer>
</Layout>
