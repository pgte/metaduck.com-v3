---
import "../styles/global.css";
import PostHog from "../components/posthog.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  url?: string;
}

const {
  title,
  description = "Metaduck - A blog about technology, programming, and more",
  image = "/images/avatar.jpg",
  type = "website",
  url = Astro.url.href,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cascadia+Code:ital,wght@0,200..700;1,200..700&family=Fira+Code:ital,wght@0,300..700;1,300..700&family=Inter:ital,wght@0,100..900;1,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Orbitron:wght@400;500;600;700;800;900&family=Space+Grotesk:ital,wght@0,300..700;1,300..700&display=swap"
      rel="stylesheet"
    />
    <!-- KaTeX CSS for math rendering -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
      integrity="sha384-GvrOXuhMATgEsSwCs4smul74iXGOixntILdUW9XmUC6+HX0sLNAK3q71HotJqlAn"
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Metaduck RSS Feed"
      href="/rss.xml"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url).href} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.url).href} />

    <!-- PostHog Analytics -->
    <PostHog />
  </head>
  <body class="min-h-screen bg-slate-900 text-green-400">
    <div
      class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900"
    >
      <!-- Animated background grid -->
      <div class="fixed inset-0 opacity-10">
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at 1px 1px, #00ff41 1px, transparent 0); background-size: 20px 20px;"
        >
        </div>
      </div>

      <header
        class="relative z-10 border-b border-green-500/30 bg-slate-900/80 backdrop-blur-sm"
      >
        <div class="container mx-auto px-4 py-6">
          <nav class="flex items-center justify-between">
            <a
              href="/"
              class="text-2xl font-bold text-green-400 font-['Orbitron'] tracking-wider hover:text-green-300 transition-colors"
            >
              <span class="text-orange-400">[</span>METADUCK<span
                class="text-orange-400">]</span
              >
            </a>
            <div class="space-x-6">
              <a
                href="/"
                class="text-green-400 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
                >HOME</a
              >
              <a
                href="/blog"
                class="text-green-400 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
                >BLOG</a
              >
              <a
                href="/about"
                class="text-green-400 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
                >ABOUT</a
              >
            </div>
          </nav>
        </div>
      </header>

      <main class="relative z-10 container mx-auto px-4 py-8">
        <slot />
      </main>

      <footer
        class="relative z-10 border-t border-green-500/30 bg-slate-900/80 backdrop-blur-sm"
      >
        <div class="container mx-auto px-4 py-6 text-center text-green-400/70">
          <p class="font-['Orbitron'] text-sm tracking-wide">
            &copy; {new Date().getFullYear()} Pedro Teixeira. All rights reserved.
          </p>
          <a
            href="https://github.com/pgte/metaduck.com-v3"
            class="text-green-400/70 hover:text-green-300 transition-colors font-['Orbitron'] text-sm tracking-wide"
          >
            VIEW ON GITHUB
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>
