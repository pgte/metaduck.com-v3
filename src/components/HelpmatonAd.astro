---
const AD_URLS = [
  "https://helpmaton.com/ads/memory",
  "https://helpmaton.com/ads/automation",
  "https://helpmaton.com/ads/support",
  "https://helpmaton.com/ads/beyond-chat",
  "https://helpmaton.com/ads/choose-any-ai",
  "https://helpmaton.com/ads/notion-for-agents",
];
---

<aside class="sci-fi-card relative border-0" aria-label="Ad: Helpmaton">
  <div class="p-0">
    <span
      class="absolute top-2 right-2 text-[10px] uppercase tracking-wider text-green-400/70 font-['Orbitron'] px-2 py-0.5 rounded"
      aria-hidden="true"
    >
      Ad
    </span>
    <iframe
      id="helpmaton-ad-iframe"
      class="w-full rounded bg-slate-900/50"
      style="min-height: 320px;"
      loading="lazy"
    />
  </div>
</aside>
<script is:inline define:vars={{ adUrls: AD_URLS }}>
  (function () {
    const iframe = document.getElementById("helpmaton-ad-iframe");
    if (!iframe || !adUrls || adUrls.length === 0) return;
    const i = Math.floor(Math.random() * adUrls.length);
    iframe.src = adUrls[i];
  })();
</script>
